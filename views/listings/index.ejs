<% layout("/layouts/boilerplate") %>

<% if (success) { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>

<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let listing of allListings) { %>
    <div class="card col" style="width: 20rem; margin: 10px;">
      <a href="/listings/<%= listing._id %>" class="listing-click">
        <img 
          class="card-image" 
          src="<%= listing.image || '/images/default.jpg' %>" 
          alt="<%= listing.title %>" 
          style="width: 300px; height: 20rem; object-fit: cover;">
        
        <div class="card-body">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text">
            <%= listing.description.substring(0, 100) %>...
            <br>
            <%= (listing.price || 0).toLocaleString
            ("en-IN", { style: "currency", currency: "INR" }) %> /night

          </p>
        </div>
      </a>
    </div>
  <% } %>
</div>




