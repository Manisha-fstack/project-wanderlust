<% layout("/layouts/boilerplate") %>

<div class="text-center mb-4">
  <h1 style="font-size: 2.5rem; font-weight: 700; margin-bottom: 0.5rem; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">
    Explore Amazing Listings
  </h1>
  <p style="color: var(--text-light); font-size: 1.1rem;">Discover your next adventure</p>
</div>

<div class="card-container">

  <% for (let listing of allListings) { %>
    <div class="card">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div style="position: relative; overflow: hidden;">
          <img src="<%= listing.image?.url || '' %>" class="card-img-top" alt="<%= listing.title %>">
          <div class="card-img-overlay">
            <i class="fa-regular fa-heart"></i>
          </div>
          <% if (currUser && listing.owner && listing.owner.equals(currUser._id)) { %>
            <div style="position: absolute; top: 12px; left: 12px;">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm" style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                <i class="fa-solid fa-edit me-1"></i> Edit
              </a>
            </div>
          <% } %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= listing.title %>
          </h5>
          <p class="card-text">
            <span style="color: #6366f1; font-weight: 700; font-size: 1.1rem;">
              <%= (listing.price || 0).toLocaleString("en-IN", { style: "currency", currency: "INR" }) %>
            </span>
            <span style="color: var(--text-light);"> / day</span>
          </p>
          <% if (listing.location) { %>
            <p style="color: var(--text-light); font-size: 0.9rem; margin-top: 0.5rem;">
              <i class="fa-solid fa-location-dot me-1"></i> <%= listing.location %>, <%= listing.country || '' %>
            </p>
          <% } %>
        </div>
      </a>
    </div>
  <% } %>
</div>
</div>






