<% layout("/layouts/boilerplate") %> <%= success %>

<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for(let listing of allListings) { %>
    <div class="card col" style="width: 20rem; margin: 10px;">
      <a href="/listings/<%= listing._id %>" class="listing-click">
      <img class="card-image" src="<%= listing.image %>" alt="<%= listing.title %>" style="width: 300px; height: 20rem;">
       <div class="card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description.substring(0, 100) %>...
        <br>
        &#8377; <%=  listing.price.toLocaleString("en-IN") %> /night </p>
        
      </div></a>
    </div>
  <% } %>
</div>


