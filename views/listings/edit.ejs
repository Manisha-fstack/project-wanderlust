<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
<br>
<h3>Edit Your Listing</h3>

<form action="/listings/<%= listing._id %>?_method=PUT" method="POST">

  <div class="mb-3">
    <label for="title" class="form-label">Title:</label><br>
    <input type="text" id="title" name="listing[title]" class="form-control" value="<%= listing.title %>" />
  </div>

  <div class="mb-3">
    <label for="description" class="form-label">Description:</label><br>
    <textarea id="description" name="listing[description]" class="form-control"><%= listing.description %></textarea>
  </div>

  <div class="mb-3">
    <label for="image" class="form-label">Image URL:</label><br>
    <input type="text" id="image" name="listing[image]" class="form-control" value="<%= listing.image %>" />
  </div>

  <div class="mb-3">
    <label for="price" class="form-label">Price:</label><br>
    <input type="number" id="price" name="listing[price]" class="form-control" value="<%= listing.price %>" />
  </div>

  <div class="mb-3">
    <label for="country" class="form-label">Country:</label><br>
    <input type="text" id="country" name="listing[country]" class="form-control" value="<%= listing.country %>" />
  </div>

  <div class="mb-3">
    <label for="location" class="form-label">Location:</label><br>
    <input type="text" id="location" name="listing[location]" class="form-control" value="<%= listing.location %>" />
  </div>

  <br>
  <div class="mb-3">
    <button type="submit" class="btn btn-dark">Edit</button>
  </div>
</div>

</form>

